{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "libs",
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "*-test"
  ],
  "filesGlob": [
      "packages/*/src/**/*.ts",
      "packages/*/src/**/*.tsx",
      "!node_modules/**"
  ],
  "rootDirs": [
    "node_modules",
    "packages"
  ]
}