{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "lib/@tandem",
    "baseUrl": "packages",
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "*-test",
    "old",
    "lib",
    "integrations",
    "examples"
  ],
  "filesGlob": [
    "./packages/**/*.ts",
    "./packages/**/*.tsx"
  ],
  "rootDirs": [
    "packages",
    "node_modules"
  ]
}