{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "classic",
    "outDir": "public/build",
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ],
  "rootDirs": [
    "node_modules",
    "src"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
