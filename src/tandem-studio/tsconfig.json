{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "out",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "*-test",
    "old",
    "out",
    "integrations",
    "examples"
  ],
  "filesGlob": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "rootDirs": [
    "."
  ]
}