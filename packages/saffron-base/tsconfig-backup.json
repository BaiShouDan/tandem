{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "lib",
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
      "**/*.ts",
      "**/*.tsx",
      "!node_modules/**"
  ],
  "rootDirs": [
    "node_modules",
    "src"
  ]
}
