#!/usr/bin/env node 

const fs = require("fs");
const pc = require("..");
const path = require("path");

const arg = process.argv[2];

pc.bundleVanilla(arg, {
  io: {
    readFile(uri) {
      return Promise.resolve(fs.readFileSync(uri, "utf8"));
    },
    resolveFile(uri, base) {
      return Promise.resolve(path.resolve(path.dirname(base), uri));
    }
  }
}).then(({code, diagnostics}) => {
  console.log(code);
}).catch(errors => {

  // This should't happen. If it doesn, then there's a bug in Paperclip.
  if (!Array.isArray(errors)) {
    throw errors;
  }

  errors.forEach((error) => {
    console.log(pc.generatePrettyErrorMessage(error));
  });

  process.exit(1);
});
