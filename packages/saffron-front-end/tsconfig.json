{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "lib",
    "moduleResolution": "classic",
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "*-test"
  ],
  "filesGlob": [
      "**/*.ts",
      "src/**/*.tsx",
      "!node_modules/**"
  ],
  "rootDirs": [
    "node_modules",
    "src"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
