{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "module": "system",
    "outFile": "bundle/saffron-front-end.js",
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "src2",
    "*-test"
  ],
  "filesGlob": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!node_modules/**"
  ],
  "rootDirs": [
    "node_modules",
    "src",
    "../"
  ]
}
