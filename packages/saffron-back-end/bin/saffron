#!/usr/bin/env node
var app = require('../lib/server');

var argv = require('yargs').argv;
var path = require('path');

var filepath = argv._[0];

if (!/^\//.test(filepath)) {
  filepath = path.join(process.cwd(), filepath);
}

app.bus.execute({
  type  : 'openFile',
  path  : filepath,
  watch : true
});
